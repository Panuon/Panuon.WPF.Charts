<Window x:Class="Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples"
        xmlns:pc="clr-namespace:Panuon.WPF.Charts;assembly=Panuon.WPF.Charts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <pc:ChartPanel Width="300"
                       Height="300">
            <pc:ChartPanel.XAxis>
                <pc:XAxis Background="Red"/>
            </pc:ChartPanel.XAxis>
            <pc:ChartPanel.YAxis>
                <pc:YAxis Background="Green"/>
            </pc:ChartPanel.YAxis>
            <pc:BarSeries Fill="CadetBlue"
                          TitleMemberPath="Title"
                          ValueMemberPath="Value1" />
            <pc:BarSeries Fill="LightPink"
                          TitleMemberPath="Title"
                          ValueMemberPath="Value2" />
        </pc:ChartPanel>
    </Grid>
</Window>
